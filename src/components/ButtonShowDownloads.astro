---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<button id="btnShowDow" class="button button-white" onclick="toggleDownloads()">
	<h3>{title}</h3>
</button>

<style>
	.link-button {
		border-style: none;
		background-image: linear-gradient(83.21deg,#3245ff 0%,#b845ed 100%);
		color: rgb(255 255 255);
	}
	
	.button.button-white {
	  border-style: none;
	  background-color: rgb(var(--accent));
	  color: rgb(255 255 255);
	}

	.button {
	  display: inline-flex;
	  height: 3.5rem;
	  align-items: center;
	  justify-content: center;
	  gap: 1rem;
	  cursor: pointer;
	  border-radius: 9999px;
	  border-width: 1px;
	  padding-left: 2.5rem;
	  padding-right: 2.5rem;
	  margin-left: 3rem;
	  margin-right: 3rem;
	  margin-top: 0.5rem;
	  margin-bottom: 0.5rem;
	  text-align: center;
	  font-family: Inter Variable,sans-serif;
	  font-size: 1rem;
	  line-height: 1.5rem;
	  font-weight: 500;
	  line-height: 1;
	  letter-spacing: .025em;
	  color: rgb(255 255 255);
	  text-decoration-line: none;
	  transition-property: color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,-webkit-backdrop-filter;
	  transition-property: color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,backdrop-filter;
	  transition-property: color,background-color,border-color,text-decoration-color,fill,stroke,opacity,box-shadow,transform,filter,backdrop-filter,-webkit-backdrop-filter;
	  transition-timing-function: cubic-bezier(.4,0,.2,1);
	  transition-duration: .15s;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		color: white;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.button.button-white:is(:hover) {
	  	background-position: 0;
		background-color: rgb(var(--accent-button));
	}

	.button.button-white:is(:active) {
	  	background-color: rgb(var(--accent));
	}

</style>

<script client:load>
  	
  	function toggleDownloads() {

    	const div = document.getElementById("options_downloads");
    	div.classList.toggle("show");

    	document.getElementById("btnShowDow").style.display = "none"
	}
</script>
