---
interface Props {
	name:string;
	image:string;
}
const {name, image} = Astro.props
---

<div class="comp">
	<img src={image} width="48px">
	<p>{name}</p>
</div>

<style>
	.comp{
		display: flex;
		flex-direction: column;
		
		align-items: center;
		padding: 1rem;
		background-color: #23262d;
		border-radius: 8px;
		border: 1px solid rgba(var(--accent-light), 25%);
	}
	.comp p{
		margin: 0;
		font-size: 0.9rem;
		text-align: center;
	}
</style>